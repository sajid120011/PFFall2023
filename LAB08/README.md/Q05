#include<stdio.h>
int decideCarUsage(int car_number)
{
	if(car_number%2==0)
	{
		printf("you can use your car on\n Tuesday \n Thursday \n Saturday \n day 2,4 and 6 of the week");
	}
	else
	{
		printf("you can use your car on \n Monday \n Wednesday \n Friday \n Sunday\n day 1,3,5 and 7 of the week");
	}
}
int main()
{
	int x;
	printf("enter car number");
	scanf("%d",&x);
	decideCarUsage(x);
}
